{{#modal-dialog stretch_ratio=1.5 opening='opening' closing='closing'}}
  <div class="modal-body">
    {{#if player.error}}
      <div style="width: 100%; margin-top: 30px; text-align: center;">
        <p>
          {{#if player.embed_error}}
            {{t "This video isn't allowed to be shown inside CoughDrop" key='embed_forbidden'}}
          {{else}}
            {{t "There was an unexpected error loading the video" key='video_error'}}
          {{/if}}
        </p>
        <p>
          <a href={{model.video.url}} target="_blank">{{t "Open the video on the web" key='open_video_on_web'}}</a>
        </p>
      </div>
    {{else}}
      <div class="video_box">
        {{#if video_url}}
          <iframe src={{video_url}} id="video_preview" frameborder="0" allow="autoplay; fullscreen; encrypted-media"></iframe>
        {{else}}
          {{t "Invalid video resource" key='invalid_video_resource'}}
        {{/if}}
        {{#if player.started}}
          {{#unless model.hide_overlay}}
            <div class="video_box_overlay"></div>
          {{/unless}}
        {{/if}}
      </div>
    {{/if}}
    <p style="margin-top: 10px;">
      {{#unless player.error}}
        <button class="btn btn-lg btn-default" {{action "toggle_video"}} style="width: 160px;">
          {{#if player.paused}}
            {{t "Resume Video" key='resume_video'}}
          {{else}}
            {{t "Pause Video" key='pause_video'}}
          {{/if}}
        </button>
      {{/unless}}
      <button class='btn btn-lg btn-default' {{action 'close'}}>{{t "Close" key='close'}}</button>
      {{#if player.time}}
        {{#if player.duration}}
          <span class="text-muted" style="margin-left: 10px;">{{duration player.time}} / {{duration player.duration}}</span>
        {{/if}}
      {{/if}}
    </p>
  </div>
{{/modal-dialog}}
